# Service Configuration
SERVICE_NAME=ai-referral-service
ENVIRONMENT=development
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8011

# AWS Configuration
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=http://localhost:4566
DYNAMODB_TABLE_PREFIX=pla-dev-

# JWT Authentication
JWT_ENABLED=false
JWT_JWKS_URL=https://your-auth-provider.com/.well-known/jwks.json
JWT_ISSUER=https://your-auth-provider.com/
JWT_AUDIENCE=pathlab-assist

# Anthropic Configuration
ANTHROPIC_API_KEY=your-api-key-here
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929
MAX_IMAGE_SIZE_MB=10
SCAN_TIMEOUT_SECONDS=120

# External Services
TEST_CATALOG_SERVICE_URL=http://localhost:8003

# CORS
CORS_ENABLED=true
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Logging
LOG_LEVEL=INFO
LOG_JSON=true  # Default: JSON logs for production. Override to false for local dev.
